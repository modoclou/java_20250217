package com.company.java015_ex;

import java.util.ArrayList;
import java.util.Scanner;

//	1. Fruits  Dto 클래스만들기    
//	    속성 :  private int no;   private  String name; private  int price;


public class ListEx004 {
	public static void main(String[] args) {
//	2. fruits     ArrayList 만들기
	ArrayList<Fruits> fruits = new ArrayList<>();
	
//	3. 다음의 데이터 넣기
	   fruits.add(new Fruits(1, "apple" , 2000));
	   fruits.add(new Fruits(2, "banana" , 2500));
	   fruits.add(new Fruits(3, "coconut" , 4500));
	   
//	4. for+size / 향상된 for 이용해서 데이터 출력
	for(int i=0; i<fruits.size(); i++)
		Fruits  temp1 = fruits.get(0);
	   System.out.print(temp1.getNo() + "/" + temp1.getName() + "/" + temp1.getPrice());
	}

	for(Fruits temp : fruits) {
	System.out.print(temp.getNo() + "/" + temp.getName() + "/" + temp.getPrice());
	}
	
//	5. 1,2,3 과일정보를 입력하시오. - 번호을 입력받으면 해당하는  과일정보의 자료출력
	Scanner sc = new Scanner(System.in);
	String [] fruitinfo = {"사과는 빨갛다" , "바나나는 노랗다" , "코코넛은 코코하다"};
	System.out.print("1,2,3 중 원하는 과일정보 번호를 입력하시오. > ");
	int num = sc.nextInt();
	
	int find =-1;
//	과일꺼내오기 -> 과일번호 == 입력한값
//	if(fruits.get(0).getNo() ==num) { find=0; }
//	if(fruits.get(1).getNo() ==num) { find=1; }
	for(int i=0; i<fruits.size(); i++) {
		if(fruits.get(i).getNo() ==num) { find=1; break; } //찾으면 나온다
		}
	System.out.print("번호 : " + fruits.get(find).getNo());
	System.out.print("이름 : " + fruits.get(find).getName());
	System.out.print("가격 : " + fruits.get(find).getPrice());
	System.out.print( fruitsinfo[find] );
	}
}
	
//	> 1,2,3 과일정보를 입력하시오.   _예) 2
//	번호: 2,   이름 : banana, 가격:2500
//	바나나는 노랗다
